<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Recommendations</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="recommendation" template="Bulbulatory_Recommendations::recommendation.phtml"></block>
            <block class="Bulbulatory\Recommendations\Block\RecommendationList" name="recommendation_list" template="Bulbulatory_Recommendations::recommendation_list.phtml"  cacheable="false"/>
        </referenceContainer>
    </body>
</page>